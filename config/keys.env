# config/keys.env - Environment Variables for Sensitive Keys and Secrets

# AtSign and DESS Configuration Keys
ATSIGN="@nimbus1_01"                # The atSign for the Nimbus server
ROOT_DOMAIN="nimbus.example.com"    # Fully Qualified Domain Name for the secondary server
SERVER_PORT=6464                    # Port number for the server

# Authentication and Security Keys
CRAM_SECRET="your_cram_secret_here" # Cram key used for authentication to the secondary server
SECRET_KEY="your_secret_key_here"   # General secret key for encryption and security purposes

# API Keys
ATSIGN_API_KEY="dc34ac3e-00e6-4d49-a557-0e3945372ed9" # API key for accessing atSign services

# Email Configuration
EMAIL="admin@nimbus.example.com"    # Email address for SSL certificate management and alerts

# SSL/TLS Certificates Paths (optional)
SSL_CERT_PATH="/path/to/cert.pem"   # Path to SSL certificate file
SSL_KEY_PATH="/path/to/key.pem"     # Path to SSL key file

# Monitoring and Alerts
ALERT_EMAIL="alerts@nimbus.example.com"  # Email address for receiving alert notifications

# Database Credentials (if applicable)
DB_USER="db_username"               # Database username
DB_PASSWORD="db_password"           # Database password
DB_HOST="localhost"                 # Database host
DB_PORT=5432                        # Database port number
DB_NAME="nimbus_db"                 # Database name
